{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "StundenPlan",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "ask": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": [
          "$APPCONFIG/*",
          "$APPCONFIG"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "stundenPlan",
      "targets": "all",
      "windows": {
        "wix": {
          "language": "de-DE"
        }
      },
      "macOS": {}
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "StundenPlan",
        "width": 800,
        "height": 600
      }
    ]
  }
}
